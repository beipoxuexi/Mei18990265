<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iconActivity">

    <Button
        android:id="@+id/btn_icon"
        android:layout_width="219dp"
        android:layout_height="193dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/timg1"
        android:drawableLeft="@mipmap/ic_launcher"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rigjt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bt_drawable"
        android:text="btn_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_icon" />

    <Button
        android:id="@+id/btn_top"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_drawable"
        android:text="btn_top"
        app:layout_constraintEnd_toEndOf="@+id/btn_left"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_left" />

    <Button
        android:id="@+id/btn_bottom"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_drawable"
        android:text="btn_buttom"
        app:layout_constraintEnd_toEndOf="@+id/btn_rigjt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_rigjt"
        app:layout_constraintTop_toBottomOf="@+id/btn_rigjt" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_drawable"
        android:text="btn_left"
        app:layout_constraintEnd_toEndOf="@+id/btn_bottom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_bottom"
        app:layout_constraintTop_toBottomOf="@+id/btn_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>